<h2>Categories</h2>

<table>

  <% @categories.each do |category| %>
  <tr>
    <td><%= link_to(category.name, category_path(category.id)) %></td>
    <td><%= link_to('Edit', edit_category_path(category.id)) %></td>
    <td><%= link_to('Delete', category_path(category.id), :method => :delete) %></td>
  </tr>
  <% end %>
 
</table>
<br/>
<p><%= link_to('New Category',new_category_path) %></p>