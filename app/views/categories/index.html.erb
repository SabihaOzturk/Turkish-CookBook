<div class="col-sm-8 text-center" >
  <h2>Categories</h2>

  <table class="table table-hover">
   
    <% @categories.each do |category| %>
    <tr>
      <td><%= link_to(category.name, category_path(category.id)) %></td>
      <td><%= link_to('Edit', edit_category_path(category.id), :class => "btn btn-primary btn-md") %></td>
      <td><%= link_to('Delete', category_path(category.id), :method => :delete, :class => "btn btn-primary btn-md") %></td>
    </tr>
    <% end %>
  
  </table>
<br/>

<p><%= link_to('New Category',new_category_path, :class => "btn btn-success btn-md") %>
  <%= link_to('Home Page' ,recipes_path, :class => "btn btn-danger btn-md") %>
  <%= link_to 'New Recipe', new_recipe_path, :class => "btn btn-info btn-md" %>
</p>

</div><!-- end colm-sm-8 --> 