<div class="col-sm-8" style="background-color:lavenderblush;">
  <div id="cook_receipes">
  <img class="backbook">
    <div id="cook_content">
      <img class="photos" src="/assets/adanakebab.jpg">
      <div class="cooking">

        <h1>Listing Recipes</h1>
        <table>
          <thead>
            <tr>
              <th>Category</th>
              <th>Title</th>
              <th>Last Updated</th>
              <th colspan="2">&nbsp;</th>
            </tr>
          </thead>

          <% for recipe in @recipes %>
            <tr>
              <td><%= link_to h(recipe.category.name) if recipe.category %>
              <td><%= link_to h(recipe.title), recipe %></td>
              <td><%= time_ago_in_words recipe.updated_at %> ago</td>
       
              <!-- <td><%= link_to 'Show', recipe %></td> -->
              <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
              <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>

        </table>
        <br>

        <%= link_to 'New Recipe', new_recipe_path %>

      </div> <!-- end .cooking -->
    </div> <!-- end #cook_content -->
  </div> <!-- end #cook_receipes -->

</div><!-- end colm-sm-8 --> 

