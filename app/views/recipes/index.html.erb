<div class="gridcontainer">
     
  <div class="col-sm-8 text-center" >
    <div id="cook_receipes">
      <div class="cooking">
        <h1>Listing Recipes</h1>
        <table class='table'>
          <thead>
            <tr>
              <td><strong>Photos</strong></td>
              <td><strong>Category</strong></td>
              <td><strong>Title</strong></td>
              <td><strong>Last Updated</strong></td>
            <!--   <td colspan="2">&nbsp;</td> -->
            </tr>
          </thead>
          <tr>
            <% for recipe in @recipes %>
            <td>
              <%= link_to recipe_path recipe do %>
              <%= image_tag recipe.image.url(:small) %>
              <% end %>
            </td>
            <td><%= recipe.category.name if recipe.category %></td>
            <td><%= link_to h(recipe.title), recipe %></td>
            <td><%= time_ago_in_words recipe.updated_at %> ago</td>
       
            <td><%= link_to 'Show', recipe %></td>
            <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
            <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>

        </table>
        <br>

        <%= link_to 'New Recipe', new_recipe_path, :class => "btn btn-danger btn-lg" %>

      </div> <!-- end .cooking -->
    </div> <!-- end #cook_receipes -->
  </div><!-- end colm-sm-8 --> 


</div><!-- end container --> 


