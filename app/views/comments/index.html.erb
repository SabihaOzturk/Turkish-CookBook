<h1>Comments for <%= @recipe.title %></h1>

<table>
  <tr>
    <th>Commenter</th>
    <th>Body</th>
  </tr>

<% for comment in @comments %>
  <tr>
    <td><%=h comment.commenter %></td>
    <td><%=h comment.body %></td>
    <td><%= link_to 'Show', recipe_comment_path(@recipe, comment) %></td>
    <td>
        <%= link_to 'Edit', edit_recipe_comment_path(@recipe, comment) %>
    </td>
    <td>
        <%= link_to 'Destroy', recipe_comment_path(@recipe, comment),
            :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_recipe_comment_path(@recipe) %>
<%= link_to 'Back to recipe', @recipe %>
