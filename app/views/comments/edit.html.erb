
<h1>Editing comment</h1>
<div class="row">
  <span class="col-md-12 text-center">
<%= form_for([@recipe, @comment]) do |f| %>
 <p>
    <%= f.label :commenter %><br />
    <%= f.text_area :commenter %>
  </p>
</span>
</div>
  <div class="row">
  <span class="col-md-12 text-center">
  <p>
    <%= f.label :body %><br />
